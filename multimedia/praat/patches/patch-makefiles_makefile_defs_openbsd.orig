+# File: makefile.defs.openbsd
+
+# System: OpenBSD 6.8
+# Yozo TODA, 9 January 2021
+
+## use the default base compiler cc and c++, which means clang
+
+COMMONFLAGS = -DNO_AUDIO -DUNIX -Dlinux `pkg-config --cflags gtk+-3.0`
+
+CFLAGS = $(COMMONFLAGS) -Werror=missing-prototypes -Werror=implicit
+
+CXXFLAGS = -std=c++17 $(COMMONFLAGS) -Wshadow
+
+LINK = $(CXX)
+
+EXECUTABLE = praat
+
+LIBS = `pkg-config --libs gtk+-3.0`
+
+ICON =
+MAIN_ICON =
